{% extends 'layouts/standard-layout.njk' %}

{% from "radios/macro.njk" import govukRadios %}

{% block formContent %}
  {{ govukRadios({
    idPrefix: fieldname,
    name: fieldname,
    hint: {
      text: viewData.hint
    },
    fieldset: {
      legend: {
        text: pageHeading,
        isPageHeading: isQuestionPage,
        classes: "govuk-fieldset__legend--l"
      }
    },
    errorMessage: errors[fieldname],
    items: viewData.items
  }) }}

  {% block formContentFooter %}{% endblock %}
{% endblock %}